<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_hal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="6dp"
        android:text="Hal :" />

    <TextView
        android:id="@+id/tv_rahasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_hal"
        android:text=" Rahasia"
        android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tanggal"
            android:text="Palembang,28 September 2022"
            android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kepada :"
        android:id="@+id/tv_kpd"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_rahasia"
        android:layout_marginTop="32dp"
        />

    <Spinner
        android:id="@+id/sp_kpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kpd"
        android:layout_marginTop="1dp"
        android:entries="@array/arr_kpd" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_klik"
        android:text="CLICK HERE"
        android:layout_centerInParent="true"
        android:layout_below="@id/sp_kpd"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_yakin"
        android:text="yakin"
        android:layout_below="@id/btn_klik"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_yakin_bgt"
        android:text="yakin banget"

        android:layout_below="@id/btn_klik"
        android:layout_toRightOf="@id/cb_yakin"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_g_yakin"
        android:text="gak yakin"
        android:layout_toRightOf="@id/cb_yakin_bgt"
        android:layout_below="@id/btn_klik"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keluar"
        android:text="keluar"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>